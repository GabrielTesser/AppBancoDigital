<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->

    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#FF0062</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#FF0062</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#000</item>
	  <item name="android:datePickerDialogTheme">@style/DatePickerStyle</item>
  </style>

	<style name="DatePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
		<!--header background-->
		<item name="colorAccent">#FF0062</item>
		<!--header textcolor-->
		<item name="android:textColorPrimaryInverse">#fff</item>
		<!--body background-->
		<item name="android:windowBackground">#eee</item>
		<!--selected day-->
		<item name="android:colorControlActivated">#3400E6</item>
		<!--days of the month-->
		<item name="android:textColorPrimary">#000</item>
		<!--days of the week-->
		<item name="android:textColorSecondary">#FF0062</item>
		<!--cancel&ok-->
		<item name="android:textColor">#3400E6</item>
	</style>
	
</resources>